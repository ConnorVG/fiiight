{
	"name": "fiiight",
	"description": "A 2d side-scrolling action game.",

    "authors": [ "Connor S. Parks" ],

    "version": "0.0.1",

    "mainSourceFile": "src/app.d",
    "sourcePaths": [],

    "targetType": "executable",
    "targetPath" : "bin",

    "copyFiles": [
        "lib",
        "resources"
    ],

    "dependencies": {
        ":fiiight": "*"
    },

    "subPackages": [
        {
            "name": "common",
            "description": "The fiiight game common library.",

            "version": "0.0.1",

            "sourcePaths": ["src/common"],

            "targetType": "library",
            "targetPath" : "lib",

            "dependencies": {
                "derelict-gl3": "~>1.0.18",
                "imageformats": "~>6.0.0",
                "gl3n": "~>1.3.1"
            }
        },
        {
            "name": "engine",
            "description": "The fiiight game engine.",

            "version": "0.0.1",

            "sourcePaths": ["src/engine"],

            "targetType": "library",
            "targetPath" : "lib",

            "dependencies": {
                "fiiight:common": "*",
                "derelict-glfw3": "~>3.0.0",
                "derelict-gl3": "~>1.0.18",
                "gl3n": "~>1.3.1"
            }
        },
        {
            "name": "game",
            "description": "The fiiight game logic.",

            "version": "0.0.1",

            "sourcePaths": ["src/game"],

            "targetType": "library",
            "targetPath" : "lib",

            "dependencies": {
                "fiiight:common": "*",
                "fiiight:engine": "*",
                "derelict-glfw3": "~>3.0.0",
                "derelict-gl3": "~>1.0.18",
                "gl3n": "~>1.3.1"
            }
        },
        {
            "name": "fiiight",
            "description": "The fiiight game implementation.",

            "version": "0.0.1",

            "sourcePaths": ["src/fiiight"],

            "targetType": "library",
            "targetPath" : "lib",

            "dependencies": {
                "fiiight:game": "*",
                "derelict-glfw3": "~>3.0.0",
                "derelict-gl3": "~>1.0.18",
                "gl3n": "~>1.3.1"
            }
        },
        "./ext/box2d/"
    ],

	"copyright": "Copyright Â© 2016, Connor S. Parks",
	"license": "Custom"
}
